		{
			"name": "Assignment Operations",
			"item": [
				{
					"name": "Get Engineer Suggestions for Ticket",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has suggested_engineers array\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('suggested_engineers');",
									"    pm.expect(jsonData.suggested_engineers).to.be.an('array');",
									"});",
									"",
									"pm.test(\"Suggestions have required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.suggested_engineers.length > 0) {",
									"        var suggestion = jsonData.suggested_engineers[0];",
									"        pm.expect(suggestion).to.have.property('engineer_id');",
									"        pm.expect(suggestion).to.have.property('engineer_name');",
									"        pm.expect(suggestion).to.have.property('engineer_level');",
									"        pm.expect(suggestion).to.have.property('assignment_tier');",
									"        pm.expect(suggestion).to.have.property('priority');",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/tickets/{{ticket_id}}/suggested-engineers?minLevel=L1",
							"host": ["{{base_url}}"],
							"path": ["tickets", "{{ticket_id}}", "suggested-engineers"],
							"query": [
								{
									"key": "minLevel",
									"value": "L1",
									"description": "Minimum engineer level (L1, L2, L3)"
								}
							]
						}
					},
					"response": []
				},
