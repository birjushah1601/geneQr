	"item": [
		{
			"name": "Engineer Management",
			"item": [
				{
					"name": "List All Engineers",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has engineers array\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('engineers');",
									"    pm.expect(jsonData.engineers).to.be.an('array');",
									"});",
									"",
									"// Save first engineer ID for other tests",
									"if (pm.response.json().engineers.length > 0) {",
									"    pm.collectionVariables.set(\"engineer_id\", pm.response.json().engineers[0].id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/engineers?limit=50&offset=0",
							"host": ["{{base_url}}"],
							"path": ["engineers"],
							"query": [
								{
									"key": "limit",
									"value": "50"
								},
								{
									"key": "offset",
									"value": "0"
								},
								{
									"key": "orgId",
									"value": "",
									"description": "Optional: Filter by organization ID",
									"disabled": true
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Engineer By ID",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Engineer has required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('id');",
									"    pm.expect(jsonData).to.have.property('name');",
									"    pm.expect(jsonData).to.have.property('engineer_level');",
									"    pm.expect(jsonData).to.have.property('email');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/engineers/{{engineer_id}}",
							"host": ["{{base_url}}"],
							"path": ["engineers", "{{engineer_id}}"]
						}
					},
					"response": []
				},
				{
